{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/v1/Accounts/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-service",
          //"Host": "localhost",
          "Port": 5159
        }
      ],
      "UpstreamPathTemplate": "/login",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AllowAnonymous": true
      }
    },
    {
      "DownstreamPathTemplate": "/api/v1/Upload/UploadFile",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "control-publisher-service",
          //"Host": "localhost",
          "Port": 5160
        }
      ],
      "UpstreamPathTemplate": "/UploadFile",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "10s",
        "PeriodTimespan": 1,
        "Limit": 1,
        "EnableEndpointRateLimiting": true,
        "ClientIdHeader": "ClientId"
      }

    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5084"
  }
}
